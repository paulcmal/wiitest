// movement.h
#ifndef _MOVEMENT_H
#define _MOVEMENT_H

#include "compteurs.h"
#include "collisions.h"

void isMoving(Circle& move, Button r, Button l, int& pass, Compteurs& compt){
  if(isIn(move,r)){
    pass = 1;
    move.x = r.x - move.radius;
    compt.speed+=1;
  }
  if(isIn(move,l)){
    pass = 0;
    move.x = move.radius + l.width;
  }
  if(pass == 0)  // deplacement du cercle
    move.x = move.x + c.speed;
  if(pass == 1)
    move.x = move.x - c.speed;
    
  
}

#endif
