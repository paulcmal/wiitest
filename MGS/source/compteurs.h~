// compteurs.h
#ifndef _COMPTEURS_H
#define _COMPTEURS_H

class Compteurs{
 public :
  void initCompteurs();
  int playerOne;
  int playerTwo;
  int playerThree;
  int playerFour;
  int speed;
  int nbEchange;
};

void Compteurs::initCompteurs(){
  playerOne = 0;
  playerTwo = 0;
  playerThree = 0;
  playerFour = 0;
  speed = 5;
  nbEchange = 0;
}


#endif
